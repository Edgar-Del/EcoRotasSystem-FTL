# Configurações do EcoRota Angola
# Copie este arquivo para config.env e ajuste as configurações conforme necessário

# Nível de logging
ECOROTA_LOG_LEVEL=INFO

# Caminhos de dados
ECOROTA_DATA_PATH=data/
ECOROTA_OUTPUT_PATH=outputs/
ECOROTA_MODELS_PATH=models/
ECOROTA_LOGS_PATH=logs/

# Configurações de ML
ECOROTA_ML_ENABLED=true
ECOROTA_SYNTHETIC_USERS=1000
ECOROTA_MODEL_SAVE=true

# Configurações de rota
ECOROTA_DEFAULT_BUDGET=20000
ECOROTA_DEFAULT_MAX_LOCATIONS=6
ECOROTA_DEFAULT_MAX_FRAGILITY=4
ECOROTA_DEFAULT_NUM_ROUTES=5

# Configurações de interface
ECOROTA_WEB_PORT=8501
ECOROTA_WEB_HOST=localhost

# Configurações de performance
ECOROTA_MAX_WORKERS=4
ECOROTA_CACHE_ENABLED=true
ECOROTA_CACHE_TTL=3600

# Configurações de desenvolvimento
ECOROTA_DEBUG=false
ECOROTA_TEST_MODE=false
ECOROTA_MOCK_DATA=false
